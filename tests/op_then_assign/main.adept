
pragma => adept("3.0")

#[foreign]
func printf(format ptr<char>, ...) int

func main {
    x int = 0
    printf(c"%d\n", x)

    x += 10
    printf(c"%d\n", x)

    x -= 9
    printf(c"%d\n", x)

    x *= 13
    printf(c"%d\n", x)

    x /= 2
    printf(c"%d\n", x)

    x %= 5
    printf(c"%d\n", x)

    x <<= 2
    printf(c"%d\n", x)

    x >>= 2
    printf(c"%d\n", x)

    x <<<= 3
    printf(c"%d\n", x)

    x >>>= 3
    printf(c"%d\n", x)

    x |= 6
    printf(c"%d\n", x)

    x &= 3
    printf(c"%d\n", x)

    x ^= 2
    printf(c"%d\n", x)
}

